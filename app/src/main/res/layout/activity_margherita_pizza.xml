<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pizza">

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Margherita Pizza"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/ingredients_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:layout_below="@id/recipe_title" />

    <TextView
        android:id="@+id/ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" - Pizza dough\n - Tomato sauce\n - Fresh mozzarella cheese\n - Fresh basil leaves"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_below="@id/ingredients_title" />

    <TextView
        android:id="@+id/instructions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:layout_below="@id/ingredients_list" />

    <TextView
        android:id="@+id/instructions_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructions_title"
        android:layout_marginTop="4dp"
        android:padding="16dp"
        android:text="1. Preheat the oven to 450°F (230°C).\n\n
        2. Roll out the pizza dough on a floured surface.\n\n
        3. Transfer the rolled dough onto a baking sheet.\n\n
        4. Spread a layer of tomato sauce on the dough.\n\n
        5. Tear the mozzarella cheese into small pieces and distribute it evenly over the sauce.\n\n
        6. Top with fresh basil leaves.\n\n
        7. Bake in the preheated oven for about 12-15 minutes or until the crust is golden and the cheese is bubbly.\n\n
        8. Remove from the oven, let it cool slightly, and slice. Serve hot.\n\n
        9. Optionally, drizzle with extra virgin olive oil and sprinkle with grated Parmesan cheese before serving.\n\n
        10. Enjoy your delicious Margherita Pizza!"
        android:textSize="16sp" />

</RelativeLayout>
